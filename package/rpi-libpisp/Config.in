config BR2_PACKAGE_RPI_LIBPISP
	bool "rpi-libpisp"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_HAS_THREADS
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_8 # C++17
	select BR2_PACKAGE_JSON_FOR_MODERN_CPP
	help
	  A helper library to generate run-time configuration
	  for the Raspberry Pi ISP (PiSP)

	  https://github.com/raspberrypi/libpisp

comment "rpi-libpisp needs a toolchain w/ C++, threads, wchar, dynamic library, gcc >= 8"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_HAS_THREADS || \
		!BR2_TOOLCHAIN_GCC_AT_LEAST_8 || BR2_STATIC_LIBS || !BR2_USE_WCHAR
